@model MagicVilla_Web.Models.Dto.Villa.VillaUpdateDTO

<form asp-action="CreateVilla" method="post">
    <br />

    <div class="container border p-4 shadow-sm">
        <h2 class="text-primary mb-3">Update Villa</h2>
        <hr />

        <input hidden asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="Rate" class="form-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="Details" class="form-label"></label>
                <textarea asp-for="Details" class="form-control"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-6">
                <label asp-for="Occupancy" class="form-label"></label>
                <input asp-for="Occupancy" class="form-control" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="Sqft" class="form-label"></label>
                <input asp-for="Sqft" class="form-control" />
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <label asp-for="Amenity" class="form-label"></label>
                <textarea asp-for="Amenity" class="form-control"></textarea>
                <span asp-validation-for="Amenity" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-6">
                <a asp-action="IndexVilla" asp-controller="Villa" class="btn btn-secondary w-100">
                    Back To List
                </a>
            </div>

            <div class="col-6">
                <input type="submit" value="Update" class="btn btn-primary w-100" />
            </div>
        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
